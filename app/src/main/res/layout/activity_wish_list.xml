<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WishList"
        android:background="@color/colorAccent">

    <TextView
            android:id="@+id/wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wish_list"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/wishList"
            android:layout_marginBottom="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.53"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/brasilero">

    </TextView>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wishList"
            android:layout_width="246dp"
            android:layout_height="288dp"
            android:fontFamily="@font/brasilero"
            tools:itemCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="168dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorRosa"
            android:text="@string/btn_wishRemove"
            android:fontFamily="@font/brasilero"
            android:layout_gravity="center"

            android:onClick="onClickbtnEnviar"
            tools:ignore="OnClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wishList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>